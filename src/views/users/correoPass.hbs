{{#each errors}}
<div class="alert alert-danger alert-dimissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dimiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

<div class="col-md-5 mx-auto p-5">
    <div class="card card shadow p-3 mb-5 bg-white">
        <div class="card-header">
            <h3>¿Enviar Correo de Cambio de Contraseña?</h3>
        </div>
        <div class="card-body">

            <form action="/email" method="POST">
                <input type="hidden" name="_method" value="PUT">

                
                <div class="form-group">
                    <h5>Email: </h5>
                    <input type="text" name="email" class="form-control" value="{{users.email}}" />
                </div>  
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Enviar
                    </button>
                </div>
                
            </form>
        </div>
    </div>
</div>