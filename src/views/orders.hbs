<div class="container mt-5 mb-3">
    <div class="row">
        <div class="col">
            <form action="/order" class="border corder-warning p-3" method="POST" autocomplete="off">
                <input type="hidden" name="_id" value="{{order._id}}">
                <div class="form-group">
                    <label for="">Ordenes</label>
                    <input type="text" class="form-control" value="{{order.name}}" name="order" placeholder="Orden">
                </div>
                 <div class="form-group">
                    <label for="">Total</label>
                    <input type="text" class="form-control" value="{{total.name}}" name="total" placeholder="Total">
                </div>
                 <div class="form-group">
                     <button type="button" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>