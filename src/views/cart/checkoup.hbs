<div class="row mt-4">
    <div class="col-md-6 offset-3">

        <h1>Checkout</h1>
        <h4>
            Your Total: ${{total}}
        </h4>

        <div id="check-error" class="alert alert-danger {{#if noError}} d-none {{/if}}">
            {{errMsg}}
        </div>

        <div class="mt-4">
            <form action="" method="POST" id="checkout-form">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" required class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label for="adress">Address</label>
                            <input type="text" name="name" id="address" required class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label for="card-name">Card Holder</label>
                            <input type="text" name="card-name" id="card-name" required class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label for="card-number">Credit Card Number</label>
                            <input type="text" name="card-number" id="card-number" required class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="card-expiry-month">Expiration Month</label>
                                    <input type="text" id="card-expiry-month" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="card-expiry-year">Expiration Year</label>
                                    <input type="text" id="card-expiry-year" class="form-control" required>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label for="card-cvc">CVC</label>
                            <input type="text" id="card-cvc" name="card-cvc" required class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button class="btn btn-success" type="submit">Buy Now</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>